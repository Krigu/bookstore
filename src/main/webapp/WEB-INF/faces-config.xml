<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <application>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <message-bundle>bundles.messages</message-bundle>
        <resource-bundle>
            <base-name>bundles.texts</base-name>
            <var>i18n</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>bundles.messages</base-name>
            <var>messages</var>
        </resource-bundle>
        <navigation-rule>
            <navigation-case>
                <from-outcome>catalogSearch</from-outcome>
                <to-view-id>/catalogSearch.xhtml</to-view-id>
                <redirect />
            </navigation-case>  
            <navigation-case>
                <from-outcome>shoppingCart</from-outcome>
                <to-view-id>/shoppingCart.xhtml</to-view-id>
                <redirect />
            </navigation-case>
            <navigation-case>
                <from-outcome>orderSummary</from-outcome>
                <to-view-id>/orderSummary.xhtml</to-view-id>
                <redirect />
            </navigation-case>    
            <navigation-case>
                <from-outcome>account</from-outcome>
                <to-view-id>/user/account.xhtml</to-view-id>
                <redirect />
            </navigation-case> 
        </navigation-rule>
    </application>
</faces-config>